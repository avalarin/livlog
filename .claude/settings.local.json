{
  "permissions": {
    "allow": [
      "Bash(swiftlint:*)",
      "Bash(xcodebuild:*)",
      "Bash(go mod tidy:*)",
      "Bash(golangci-lint run:*)",
      "Bash(go build:*)",
      "Bash(go vet:*)",
      "Bash(gofmt:*)",
      "Bash(go test:*)",
      "Bash(go mod download:*)",
      "Bash(go get:*)",
      "Bash(grep:*)",
      "Bash(ls:*)",
      "Bash(just:*)",
      "mcp__xcodebuildmcp__*"
    ]
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit|MultiEdit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/.claude/hooks/track-modified-files.sh"
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/.claude/hooks/trigger-code-review.sh"
          }
        ]
      }
    ]
  }
}
